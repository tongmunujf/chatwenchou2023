<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|bottom"
        android:textSize="40dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TableRow>
        <Button
            android:id="@+id/Del_one"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="back"/>


        <Button
            android:id="@+id/Del_all"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="clean"/>

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/add"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/one"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/three"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/subtract"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/four"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/five"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/six"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/multiply"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/devide"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/point"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textSize="20dp"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:textSize="20dp"/>
    </TableRow>


</TableLayout>